@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;
<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet.</h3>
}
else {
  <h2>Here is a list of clients, and their respective stylists.</h2>
  <h2>Click on a stylist to view their customer base, or add a client.</h2>
  <ul>
    @foreach (Client client in Model)
    {
      <li>@client.Name | @Html.ActionLink($"{client.Stylist.Name}", "Details", "Stylists", new { id = client.StylistId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new client", "Create")</p>
<p>@Html.ActionLink("Return home", "Index", "Home")</p>